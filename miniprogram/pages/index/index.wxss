.list-masonry {
  column-count: 2;
  column-gap: 15rpx;
}

.item-masonry {
  break-inside: avoid;
  box-sizing: border-box;
  padding-bottom: 15rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.item-masonry image {
  width: 100%;
  border-radius: 10rpx 10rpx 0 0;
}

.item-masonry .title{
  padding: 0 10rpx ;
  font-size: 14px;
}