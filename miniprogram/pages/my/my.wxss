/* miniprogram/pages/my/my.wxss */
.header{
  width: 100%;
  height: 140px;
  background: #df5548;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: #fff
}
.header image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 10px;
}
.header button{
  color: #fff;
}
.btnhover{
  background: #df5548;
}
ul {
  width: 100%;
  background: #fff;
  font-size: 14px
}
ul li{
  display: flex;
  align-items: center;
  line-height: 45px;
  padding: 0 10px;
  border-bottom: 1px solid #f5f5f5;
}
ul li icon{
  padding: 0 5px;
}
ul li:last-child{
  border: none
}